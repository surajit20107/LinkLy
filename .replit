entrypoint = "main.go"
run = ["go", "run", "."]

modules = ["go-1.25.1"]

[env]
GOPATH="$REPL_HOME/gopath"

[nix]
channel = "stable-24_05"
packages = ["air", "go"]

[gitHubImport]
requiredFiles = [".replit"]

[deployment]
build = "CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build -a -o main"
run = "./main"
ignorePorts = false
deploymentTarget = "gce"

[agent]
expertMode = true

[[ports]]
localPort = 3000
externalPort = 80
